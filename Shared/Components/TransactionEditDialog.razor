@inject ITransactionService _transactionService

<MudDialog>
    
    <DialogContent>
        <TransactionForm Transaction="Transaction" ButtonText="Edit" OnValidSubmitCallback="Submit"></TransactionForm>
    </DialogContent>

</MudDialog>


@code {
    
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter] 
    public Transaction Transaction { get; set; }
    
    /// <summary>
    /// Submit is called when valid Form is submitted
    /// </summary>
    void Submit()
    {
        _transactionService.OnTransactionHasChanged();
        MudDialog.Close();
    }

}